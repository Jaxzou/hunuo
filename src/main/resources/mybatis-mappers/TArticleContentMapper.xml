<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.boot.security.server.dao.TArticleContentDao">

	<sql id="where">
		<where>
			<if test="params.id != null and params.id != ''">
				and id = #{params.id} 
			</if>
			<if test="params.content != null and params.content != ''">
				and content = #{params.content} 
			</if>
		
		</where>
	</sql>

	<select id="count" resultType="int">
		select count(1) from t_article_content t
		<include refid="where" />
	</select>

	<select id="list" resultType="TArticleContent">
		select * from t_article_content t
		<include refid="where" />
		${params.orderBy}
		limit #{offset}, #{limit}
	</select>

	<update id="update">
		update t_article_content t
		<set>
			<if test="content != null">
				content = #{content}, 
			</if>

		</set>

		where t.id = #{id}
	</update>

</mapper>
